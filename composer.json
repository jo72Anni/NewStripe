{
    "name": "jo72anni/stripe-cart-checkout",
    "description": "Carrello e checkout con Stripe Payment e database PostgreSQL",
    "type": "project",
    "keywords": ["stripe", "payments", "ecommerce", "postgresql", "checkout"],
    "require": {
        "stripe/stripe-php": "^14.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-zip": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "jo72Anni",
            "email": "tua@email.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "StripeCart\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "StripeCart\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "echo 'üîÑ Stripe Cart Checkout - Installazione dipendenze'",
            "echo 'üì¶ Stripe PHP SDK: ^14.0'",
            "echo 'üóÑÔ∏è  Database: PostgreSQL'",
            "echo '‚úÖ Verifica estensioni PHP...'",
            "php -r \"\$extensions = ['pdo', 'pdo_pgsql', 'curl', 'json', 'mbstring', 'zip']; foreach(\$extensions as \$ext) { echo extension_loaded(\$ext) ? '‚úÖ ' . \$ext . PHP_EOL : '‚ùå ' . \$ext . PHP_EOL; }\"",
            "echo 'üöÄ Installazione completata!'"
        ],
        "post-update-cmd": [
            "echo 'üì• Aggiornamento dipendenze completato'"
        ],
        "test": [
            "phpunit"
        ],
        "check-extensions": [
            "php -r \"foreach(['pdo', 'pdo_pgsql', 'curl', 'json', 'mbstring', 'zip'] as \$ext) { if (!extension_loaded(\$ext)) { throw new Exception('Estensione mancante: ' . \$ext); } } echo '‚úÖ Tutte le estensioni sono caricate' . PHP_EOL;\""
        ]
    },
    "scripts-descriptions": {
        "test": "Esegui i test PHPUnit",
        "check-extensions": "Verifica che tutte le estensioni richieste siano caricate"
    },
    "config": {
        "platform-check": false,
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "process-timeout": 0
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/jo72anni/stripe-cart-checkout/issues",
        "source": "https://github.com/jo72anni/stripe-cart-checkout"
    },
    "extra": {
        "stripe": {
            "version": "14.0"
        }
    }
}
